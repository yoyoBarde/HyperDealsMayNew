<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="#ffffff"
    android:layout_marginStart="20dp"
    android:id="@+id/specificPromoContainer"
    android:layout_marginEnd="20dp"
    android:padding="5dp">


    <ImageView
        android:id="@+id/promoPicture"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/bench"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/promoNAME"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:lines="2"
        android:text="Bench 50 % Off!"
        android:textColor="#68a8e3"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/promoPicture"
        app:layout_constraintTop_toTopOf="@+id/promoPicture" />


    <TextView
        android:id="@+id/promoDESCRIPTION"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:text="Bench denim sale: Promo runs til May20-21,2018. Hurry and grab yours now!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/promoPicture"
        app:layout_constraintTop_toBottomOf="@+id/promoNAME" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/promoSTORE">

        <TextView
            android:id="@+id/promoLOCATION"
            android:layout_width="match_parent"
            android:layout_height="25dp"

            android:paddingStart="20sp"
            android:paddingLeft="20sp"
            android:text="SM Seaside City Cebu"
            android:textColor="#68a8e3"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="172dp" />

        <TextView
            android:id="@+id/promoNUMBER"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="30sp"
            android:paddingLeft="30sp"
            android:text="09154638674"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/interested"
                android:layout_width="56dp"
                android:layout_height="53dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/interested" />

            <ImageView
                android:id="@+id/call"
                android:layout_width="56dp"
                android:layout_height="53dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                app:srcCompat="@drawable/ic_call_black_24dp" />

            <ImageView
                android:id="@+id/map"
                android:layout_width="56dp"
                android:layout_height="53dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/navigationicon" />
        </LinearLayout>

    </LinearLayout>







    <TextView
        android:id="@+id/promoSTORE"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Bench"
        android:textColor="#ff0000"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/promoDESCRIPTION"
        app:layout_constraintHorizontal_bias="0.015"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/promoPicture" />

</android.support.constraint.ConstraintLayout>
