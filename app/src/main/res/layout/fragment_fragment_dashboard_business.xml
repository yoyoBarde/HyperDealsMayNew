<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FragmentsBusiness.FragmentDashboardBusiness">
    <LinearLayout
        android:layout_gravity="center_horizontal"

        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        
        <ImageView
            android:layout_width="40dp"
            android:layout_height="37dp"
            android:src="@drawable/interested"
            />
        <TextView
            android:id="@+id/tv_interest_count"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center_horizontal"

        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="37dp"
            android:src="@drawable/viewed"
            />
        <TextView
            android:id="@+id/tv_promo_views"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center_horizontal"

        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="37dp"
            android:src="@drawable/dismissed"
            />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center_horizontal"

        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="37dp"
            android:src="@drawable/sent"
            />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            />
    </LinearLayout>
    


</LinearLayout>