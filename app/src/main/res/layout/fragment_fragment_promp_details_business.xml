<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".FragmentsBusiness.FragmentPrompDetailsBusiness">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/tv_promoTitle"
        android:textSize="30dp"
        android:maxLines="2"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bench Midnight Madness Sale!"
        android:textStyle="bold"
        android:textColor="@color/promoname_color"

        android:paddingBottom="20dp"
        />

    <LinearLayout
        android:paddingVertical="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:textSize="20dp"
            android:textStyle="italic"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Store : "
            android:textColor="@color/promostore_color"
            />
        <TextView
            android:id="@+id/tv_promoStore"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bench"
            android:textStyle="bold"
            android:textColor="@color/promostore_color"
            />

    </LinearLayout>

    <LinearLayout
        android:paddingVertical="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:textSize="20dp"
            android:textStyle="italic"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location: "
            android:textColor="@color/promostore_color"
            />
        <TextView
            android:id="@+id/tv_promoPlace"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emporium Cebu"
            android:textStyle="bold"
            android:textColor="@color/promostore_color"
            />

    </LinearLayout>
    <LinearLayout
        android:paddingVertical="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:textSize="20dp"
            android:textStyle="italic"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description: "
            android:textColor="@color/promostore_color"
            />
        <TextView

            android:id="@+id/tv_promoDescription"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Markdown 50% off on all denim jeans and jackets."
            android:textStyle="bold"
            android:textColor="@color/promostore_color"
            />

    </LinearLayout>
    <LinearLayout
        android:paddingVertical="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:textSize="20dp"
            android:textStyle="italic"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Promo runs from : "
            android:textColor="@color/promostore_color"
            />
        <TextView
            android:id="@+id/promoDuration"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" March 25 to 30"
            android:textStyle="bold"
            android:textColor="@color/promostore_color"
            />

    </LinearLayout>
    <LinearLayout
        android:paddingVertical="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:textSize="20dp"
            android:textStyle="italic"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact #: "
            android:textColor="@color/promostore_color"
            />
        <TextView
            android:id="@+id/tv_promoContect"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09334757580"
            android:textStyle="bold"
            android:textColor="@color/promostore_color"
            />

    </LinearLayout>

    <LinearLayout

        android:layout_marginTop="10dp"

android:gravity="center"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:layout_weight="1"

            >

            <ImageView
                android:id="@+id/iv_thumbsup"
                android:layout_width="56dp"
                android:layout_height="53dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/interested"
                app:layout_constraintBottom_toTopOf="@+id/textView18"
                app:layout_constraintEnd_toEndOf="@+id/textView18"
                app:layout_constraintStart_toStartOf="@+id/textView18"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginBottom="8dp"
                android:text="Interested"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:paddingHorizontal="10dp"
            android:layout_weight="1"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_call"
                android:layout_width="56dp"
                android:layout_height="53dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/tv_call"
                app:layout_constraintEnd_toEndOf="@+id/tv_call"
                app:layout_constraintStart_toStartOf="@+id/tv_call"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                app:srcCompat="@drawable/ic_call_black_24dp" />

            <TextView
                android:id="@+id/tv_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginBottom="8dp"
                android:text="Call"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </android.support.constraint.ConstraintLayout>


        <android.support.constraint.ConstraintLayout
            android:paddingHorizontal="10dp"
            android:layout_weight="1"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_map"

                android:layout_width="56dp"
                android:layout_height="53dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/tv_nagigate"
                app:layout_constraintEnd_toEndOf="@+id/tv_nagigate"
                app:layout_constraintStart_toStartOf="@+id/tv_nagigate"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                android:src="@drawable/navigationicon"
/>
            <TextView
                android:id="@+id/tv_nagigate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginBottom="8dp"
                android:text="Navigate"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>
</LinearLayout>

</ScrollView>