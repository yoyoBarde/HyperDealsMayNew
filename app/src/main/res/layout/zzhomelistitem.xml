<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/constraint_holder"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/homePromoImage"
        android:layout_width="101dp"
        android:layout_height="85dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/bench"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="2.5 Km"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/homePromoImage" />

    <TextView
        android:id="@+id/tv_away"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginBottom="8dp"
        android:text="away"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/homePromoStore"
        app:layout_constraintEnd_toEndOf="@+id/tv_distance"
        app:layout_constraintStart_toStartOf="@+id/tv_distance"
        app:layout_constraintTop_toBottomOf="@+id/tv_distance" />

    <TextView
        android:id="@+id/homePromoName"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:maxLines="2"
        android:text="PROMO NAME"
        android:textColor="@color/promoname_color"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tv_distance"
        app:layout_constraintStart_toEndOf="@+id/homePromoImage"
        app:layout_constraintTop_toTopOf="@+id/homePromoImage" />

    <TextView
        android:id="@+id/homePromoStore"
        android:layout_width="0dp"
        android:layout_height="28dp"

        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"

        android:layout_marginBottom="8dp"
        android:text="PROMO STORE"
        android:textColor="@color/promostore_color"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/homePromoImage"
        app:layout_constraintStart_toEndOf="@+id/homePromoImage" />


</android.support.constraint.ConstraintLayout>